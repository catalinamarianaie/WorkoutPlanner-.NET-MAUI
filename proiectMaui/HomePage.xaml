<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proiectMaui.HomePage"
             Title="Acasă">

    <Grid Padding="10">
        <!-- Mesaj când lista e goală -->
        <Label x:Name="emptyMessageLabel"
               Text="Nu ai încă niciun antrenament adăugat."
               FontSize="18"
               TextColor="Gray"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               IsVisible="False" />

        <!-- Lista cu antrenamente -->
        <CollectionView x:Name="workoutList"
                        ItemsSource="{Binding}"
                        IsVisible="True">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="5">
                        <Grid ColumnDefinitions="*, Auto">
                            <!-- Informațiile despre antrenament -->
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="{Binding Title}" FontSize="20" FontAttributes="Bold"/>
                                <Label Text="{Binding Type}" />
                                <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}" />
                                <Label Text="{Binding DurationMinutes, StringFormat='Durată: {0} minute'}"/>
                            </VerticalStackLayout>

                            <!-- Butonul, centrat pe verticală în partea dreaptă -->
                            <Button Grid.Column="1"
                                Text="Șterge antrenamentul"
                                BackgroundColor="DarkRed"
                                TextColor="White"
                                VerticalOptions="Center"
                                HorizontalOptions="End"
                                Padding="10,5"
                                Clicked="OnDeleteClicked"
                                CommandParameter="{Binding}" />
                        </Grid>
                        

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </Grid>
</ContentPage>
