<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proiectMaui.EditWorkoutPage"
             Title="Editează Antrenament">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Detalii Antrenament -->
            <Entry x:Name="titleEntry" Placeholder="Titlu antrenament" />
            <Picker x:Name="typePicker" Title="Tip antrenament">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Cardio</x:String>
                        <x:String>Forță</x:String>
                        <x:String>Flexibilitate</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <DatePicker x:Name="datePicker" />
            <Entry x:Name="durationEntry" Placeholder="Durată (minute)" Keyboard="Numeric" />
            <Editor x:Name="notesEditor" Placeholder="Note" HeightRequest="100" />

            <!-- Exerciții -->
            <Label Text="Exerciții" FontSize="18" FontAttributes="Bold" />
            <CollectionView x:Name="exerciseList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding ReprDisplay}" FontSize="16" />
                            <Button Text="✏️" Clicked="OnEditExerciseClicked" CommandParameter="{Binding}" />
                            <Button Text="🗑️" Clicked="OnDeleteExerciseClicked" CommandParameter="{Binding}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Butoane Salvare și Anulare -->
            <Button Text="Salvează Modificările" Clicked="OnSaveClicked" />
            <Button Text="Anulează" Clicked="OnCancelClicked" BackgroundColor="LightGray" TextColor="Black" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
