<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sfchart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
    x:Class="proiectMaui.StatisticsPage"
    Title="Statistici">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label x:Name="totalLabel" FontSize="18" />
            <Label x:Name="durationLabel" FontSize="18" />
            <Label x:Name="averageLabel" FontSize="18" />
            <Label x:Name="commonLabel" FontSize="18" />

            <BoxView HeightRequest="1" Color="Gray" />

            <Label Text="Durată totală pe zi:" FontAttributes="Bold" />

            <sfchart:SfCartesianChart x:Name="chart" HeightRequest="250">
                <sfchart:SfCartesianChart.XAxes>
                    <sfchart:CategoryAxis />
                </sfchart:SfCartesianChart.XAxes>
                <sfchart:SfCartesianChart.YAxes>
                    <sfchart:NumericalAxis />
                </sfchart:SfCartesianChart.YAxes>
            </sfchart:SfCartesianChart>

            <Button Text="Reîncarcă statistici" Clicked="OnRefreshClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
