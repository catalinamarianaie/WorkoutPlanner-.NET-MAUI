<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="proiectMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:proiectMaui"
    Shell.FlyoutBehavior="Disabled"
    Title="proiectMaui">

    <TabBar>
        <ShellContent Title="Acasă" ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage" />
        <ShellContent Title="Adaugă" ContentTemplate="{DataTemplate local:AddWorkoutPage}" Route="AddWorkoutPage" />
        <ShellContent Title="Detalii" ContentTemplate="{DataTemplate local:WorkoutDetailsPage}" Route="WorkoutDetailsPage" />
        <ShellContent Title="Editare" ContentTemplate="{DataTemplate local:EditWorkoutPage}" Route="EditWorkoutPage" />
        <ShellContent Title="Statistici" ContentTemplate="{DataTemplate local:StatisticsPage}" Route="StatisticsPage" />
        <ShellContent Title="Personalizare" ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
    </TabBar>

</Shell>

